@using Microsoft.AspNetCore.Http
@model StoreModels.Order

@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>
<h6>Total Price: @Model.TotalPrice.ToString("C")</h6>

<hr />
<p>Included items</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Item Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Total Price
            </th>
            <th>
                Location
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.orderItems)
        {
            <tr>
                <th>
                    @item.Product.ProductName
                </th>
                <th>
                    @item.Quantity
                </th>
                <th>
                    @item.Product.ProductPrice.ToString("C")
                </th>
                <th>
                    @item.TotalPrice.ToString("C")
                </th>
                <th>
                    @item.Location.LocationName
                </th>
            </tr>
        }
    </tbody>
</table>